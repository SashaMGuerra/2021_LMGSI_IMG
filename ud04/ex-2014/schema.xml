<receta plato="primero"
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='schema.xsd'>
    <nombre>Risotto Milanesa</nombre>
    <tiempo coccion="20"/>
    <ingredientes>
        <ingrediente>
            <nombre>Arroz</nombre>
            <cantidad unidad="gramos">500</cantidad>
        </ingrediente>
        <ingrediente>
            <nombre>Cebolla</nombre>
            <cantidad>1</cantidad>
        </ingrediente>
        <ingrediente>
            <nombre>Azafrán</nombre>
            <cantidad unidad="pizca">1</cantidad>
        </ingrediente>
        <ingrediente>
            <nombre>Queso parmesano</nombre>
            <cantidad unidad="gramos">100</cantidad>
        </ingrediente>
        <ingrediente>
            <nombre>Mantequilla</nombre>
            <cantidad unidad="gramos">100</cantidad>
        </ingrediente>
        <ingrediente>
            <nombre>Sal</nombre>
        </ingrediente>
        <ingrediente>
            <nombre>Pimienta</nombre>
        </ingrediente>
        <ingrediente>
            <nombre>Caldo</nombre>
            <cantidad unidad="mililitros">1000</cantidad>
        </ingrediente>
        <ingrediente>
            <nombre>Vino blanco</nombre>
            <cantidad unidad="chorro">1</cantidad>
        </ingrediente>
    </ingredientes>
    <instrucciones>
        <paso>Picar cebolla, pochar mitad de la mantequilla</paso>
        <paso>Transparente ya, agregar azafrán, vino y dejar reducir</paso>
        <paso>Incorporar arroz y sofreír un poco</paso>
        <paso>Añadir caldo claiente poco a poco</paso>
        <paso>Salpimentar</paso>
        <paso>Agregar mantequlla y queso</paso>
        <paso>Servir</paso>
    </instrucciones>
</receta>
